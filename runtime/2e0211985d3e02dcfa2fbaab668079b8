<script src="<?= __ROOT__ ?>/public/static/layui/layui.js" charset="utf-8"></script>
<script>
    var uid = "<?= isset($user['u_id'])?$user['u_id']:''?>";
    window.onload= function () {
        $('.joke-content').on('click','.praise',function(){

            if(!uid){
                layer.msg('游客不可以点赞哦！!',{icon:2,time:1000});
            }
            var obj = $(this);
            var is_=obj.data('is_');
            if(is_==1){
                layer.msg('<i class="layui-icon" style="color: red;font-size: 50px;"><b>&#xe69c;</b></i><br>你已经赞过了！', {
                    time: 20000, //20s后自动关闭
                    btn: ['明白了', '知道了']
                });
                return false;
            }
            var flog=0;
            var id=$(this).parents('.assess').data('id');
            var val=$(this).data('val');
            $.ajax({
                type: 'get',
                url: "<?=U('praise') ?>",
                data : {id:id,val:val},
                success: function(result){
                    if(result.code==200){
                        if(val=='+'){
                            var $url='<?= __ROOT__ ?>/public/static/images/yizan.png';
                        }else{
                            var $url='<?= __ROOT__ ?>/public/static/images/yicai.png';
                        }
                        var praise_txt = obj.next();
                        var num=parseInt(praise_txt.text());
                        obj.children().attr('src',$url);
                        praise_txt.addClass("hover");
                        obj.data('is_',1);
                        num =parseInt(num+1);
                        praise_txt.text(num)
                    }
                    if(result.code==1){
                        layer.msg('<i class="layui-icon" style="color: red;font-size: 50px;"><b>&#xe69c;</b></i><br>'+result.msg+'！', {
                            time: 20000, //20s后自动关闭
                            btn: ['明白了', '知道了']
                        });
                        return false;
                    }
                    if(result.code==0){
                        layer.msg('<i class="layui-icon" style="color: red;font-size: 50px;"><b>&#xe69c;</b></i><br>抱歉，系统故障！', {
                            time: 20000, //20s后自动关闭
                            btn: ['明白了', '知道了']
                        });
                        return false;
                    }

                }
            });

        });
    };
    layui.use(['form','flow','element', 'layedit'], function(){
        var form = layui.form
                ,layer = layui.layer
                ,layedit = layui.layedit
                ,$ = layui.jquery
                ,element = layui.element
                ,flow = layui.flow;

        flow.load({
            elem: '#LAY_demo1' //流加载容器
            ,scrollElem: '#LAY_demo1'
            ,done: function(page, next){ //执行下一页的回调
                setTimeout(function(){
                    var lis = [];
                    $.ajax({
                        type: 'get',
                        url: "<?=U('index') ?>",
                        data: {page:page},
                        dataType: 'json',
                        success: function(result){
                            if(result.code==200){
                                $.each(result.data, function (k, v) {
                                    lis.push('<div class="joke"  align="left">\
                                            <div class="joke-top">\
                                            <img class="image" src="<?= __ROOT__ ?>/'+ v.img+'">\
                                            <div class="message">\
                                            <span class="uname">\
                                    <span>'+v.nickname+'<br>\
                                    <font class="add-time">'+ v.add_time+'</font>\
                                    </span><br>\
                                    </span>\
                                    </div>\
                                    </div>\
                                    <div class="stage">\
                                    <p>'+ v.content+'</p>\
                                    </div>\
                                    <div class="assess" data-id="'+ v.id+'">\
                                            <div class="praise-box">\
                                            <span class="praise" data-val="+" data-is_=""><img src="<?= __ROOT__ ?>/public/static/images/zan.png" class="praise-img" /></span>\
                                            <span class="praise-txt">'+v.upnums+'</span>\
                                    </div>\
                                    <div class="praise-box">\
                                            <span class="praise" data-val="-" data-is_=""><img src="<?= __ROOT__ ?>/public/static/images/cai.png" class="praise-img" /></span>\
                                            <span class="praise-txt">'+v.downnums+'</span>\
                                    </div>\
                                    </div>\
                                    </div>')
                                });
                                next(lis.join(''), page <=result.page_num);
                            }else{
                                layer.msg('加载失败了!',{icon:2,time:1000});
                            }
                        }
                    });
                }, 500);
            }
        });

        //创建一个编辑器
        var editIndex = layedit.build('LAY_demo_editor',{tool: [
            'strong' //加粗
            ,'italic' //斜体
            ,'underline' //下划线
            ,'del' //删除线
            ,'|' //分割线
            ,'left' //左对齐
            ,'center' //居中对齐
            ,'right' //右对齐
            ,'link' //超链接
            ,'unlink' //清除链接
            ,'face' //表情
//            ,'image' //插入图片
            ,'help' //帮助
        ]});

        //自定义验证规则
        form.verify({
            content: function(value){
                layedit.sync(editIndex);
            }
        });



        //监听提交
        form.on('submit(demo1)', function(data){
            $.ajax({
                type: 'post',
                url: "<?=U('save') ?>",
                data: data.field,
                dataType: 'json',
                success: function(result){
                    if(result.code==200){
                        layer.msg('添加成功!',{icon:1,time:1000});
                        window.location.href="<?=U('index/index') ?>";
                    }else{
                        layer.msg('添加失败!',{icon:2,time:1000});
                    }
                }
            });
            return false;

        });

    });
</script>
